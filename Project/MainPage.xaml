             x:Class="Project.MainPage">

    <StackLayout Padding="0">
        <Grid>
            <StackLayout Padding="0" Margin="0">
                <Frame BackgroundColor="SteelBlue" HeightRequest="130" HorizontalOptions="FillAndExpand"></Frame>
            </StackLayout>
            
            <StackLayout Margin="10,90,10,0">
                <Frame BackgroundColor="White" HasShadow="True" HeightRequest="280" HorizontalOptions="FillAndExpand">

                </Frame>
            </StackLayout>
        </Grid>
    </StackLayout>
    

</ContentPage>
